<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_000000"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp" >
    <LinearLayout
        android:id="@+id/clum_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="名称"
            android:textSize="24px"
            android:textColor="@color/yellow_EADE15"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textColor="@color/blue_light_03e8FD"
            android:visibility="gone"
            android:textSize="21px"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

    <com.example.xie.stock.view.InterceptScrollContainer
        android:id="@+id/scroollContainter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/clum_title"
        android:focusable="false" >

        <com.example.xie.stock.view.MyHScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="最新价"
                    android:textSize="21px"
                    android:textColor="@color/green_1dc925"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="涨幅"
                    android:textSize="21px"
                    android:textColor="@color/green_1dc925"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="涨跌"
                    android:textSize="21px"
                    android:textColor="@color/green_1dc925"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="昨收价"
                    android:textSize="21px"
                    android:gravity="center"
                    android:textColor="@color/green_1dc925"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="成交量"
                    android:textSize="21px"
                    android:textColor="@color/green_1dc925"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="成交额"
                    android:textSize="21px"
                    android:textColor="@color/green_1dc925"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="开盘价"
                    android:textSize="21px"
                    android:textColor="@color/green_1dc925"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="最高价"
                    android:textSize="21px"
                    android:textColor="@color/green_1dc925"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="80dp"
                    android:textSize="21px"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="最低价"
                    android:textColor="@color/green_1dc925"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
        </com.example.xie.stock.view.MyHScrollView>
    </com.example.xie.stock.view.InterceptScrollContainer>
</RelativeLayout>